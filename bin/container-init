#!/bin/bash

set -e

cd /run/host/var/home/david/Boxes/${CONTAINER_ID}

[[ -f /usr/bin/traefik ]] && setcap 'cap_net_bind_service=+ep' /usr/bin/traefik

chown david:david .local .local/share

sudo -u david mkdir -p .config .cache trunk .local/bin
sudo -u david --preserve-env=CONTAINER_ID \
  /run/host/var/home/david/Boxes/sys/trunk/traits/base/dot-local/bin/restow
