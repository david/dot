#!/bin/bash

set -euo pipefail

function config {
  for d in "$@" ; do
    distrobox-host-exec stow \
      --restow \
      --dir $HOME/../sys/trees/trunk/$d \
      --target $HOME \
      --dotfiles \
      --no-folding \
      home
  done
}

function formulae {
  local container

  OPTIND=1

  while getopts "c:" opt ; do
    case $opt in
      c)
        container=$OPTARG
        ;;
    esac
  done

  [[ -n "$container" && "$container" =~ "$CONTAINER_ID" ]] || return 0

  shift $(($OPTIND - 1))

  if [[ "$@" =~ "heroku" ]] ; then
    brew tap heroku/brew
  fi

  brew install "$@"
}

function gems {
  local container

  OPTIND=1

  while getopts "c:" opt ; do
    case $opt in
      c)
        container=$OPTARG
        ;;
    esac
  done

  shift $(($OPTIND - 1))

  gem install "$@"
}

function packages {
  local container

  OPTIND=1

  while getopts "c:" opt ; do
    case $opt in
      c)
        container=$OPTARG
        ;;
    esac
  done

  [[ -n "$container" && "$container" =~ "$CONTAINER_ID" ]] || return 0

  shift $(($OPTIND - 1))

  sudo apt-get install --assume-yes "$@"
}

function include-container {
  local container=${1:-}

  [[ -n "$container" && "$container" =~ "$CONTAINER_ID" ]]
}

config container shared secrets

# packages -c ar mysql-client libmysqlclient-dev
# packages -c hms libpq-dev
# gems -c ar,hms ruby-lsp

