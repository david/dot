#!/usr/bin/env bash

packages=(
  @github/copilot
  opencode-ai
  yarn
)

set -euo pipefail

script_dir="$(realpath $(dirname ${BASH_SOURCE[0]}))"
base_dir="$(dirname $script_dir)"

case "${1:-}" in
  sync)
    npm i --global ${packages[@]}
    ;;

  *)
    >&2 echo "usage: $0 sync"
    exit 1
esac

